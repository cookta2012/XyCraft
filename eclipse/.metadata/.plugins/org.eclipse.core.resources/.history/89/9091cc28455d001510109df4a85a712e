package com.foxy.xycraft.handler;

import com.foxy.xycraft.item.XyItems;

import cofh.lib.util.helpers.ItemHelper;
import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.item.ItemStack;

public class SmeltingHandler {
	
	public static void postInit(){
		GameRegistry reg = null;
		ItemHelper ih = null;
		
		reg.addSmelting(ih.cloneStack(XyItems.XychoriumBlue, 1), XyItems.XychoriditeBlue, 2);
		reg.addSmelting(ih.cloneStack(XyItems.XychoriumGreen, 1), XyItems.XychoriditeGreen, 2);
		reg.addSmelting(ih.cloneStack(XyItems.XychoriumRed, 1), XyItems.XychoriditeRed, 2);
		reg.addSmelting(ih.cloneStack(XyItems.XychoriumDark, 1), XyItems.XychoriditeDark, 2);
		reg.addSmelting(ih.cloneStack(XyItems.XychoriumLight, 1), XyItems.XychoriditeLight, 2);
	}

}
