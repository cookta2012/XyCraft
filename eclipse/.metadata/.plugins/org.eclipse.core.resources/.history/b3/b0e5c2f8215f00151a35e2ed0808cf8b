package com.foxy.xycraft.compat;

import com.foxy.xycraft.block.XyBlocks;
import com.foxy.xycraft.block.XychoriumOre;
import com.foxy.xycraft.block.machine.GlassViewer;
import com.foxy.xycraft.compat.provider.XyBodyProvider;

import mcp.mobius.waila.api.IWailaRegistrar;
import net.minecraft.block.Block;
import net.minecraft.world.World;

public class XyWAILA {
	
	public static String body;
	
	public static void onWailaCall(IWailaRegistrar reg){
		reg.registerBodyProvider(new XyBodyProvider(body), XychoriumOre.class);
	}
	
	public void tipRegistry(Block block, World world){
		if(block == XyBlocks.XyOreBlue){
			this.body = "Color: Blue";
		}
		if(block == XyBlocks.XyOreGreen){
			this.body = "Color: Green";
		}
	}

}
